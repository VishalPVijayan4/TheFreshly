<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5sp"
    android:background="@drawable/rounded_bg_white">

    <TextView
        android:id="@+id/category_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:letterSpacing="0.01"
        android:maxLines="2"
        android:padding="1dp"
        android:paddingTop="5dp"
        android:text="Category Name"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/black" />

    <LinearLayout
        android:id="@+id/ll_"
        app:layout_constraintTop_toBottomOf="@+id/category_title"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/view2"
        android:background="@drawable/rounded_bg_sienna"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_width="70sp"
        android:layout_height="70sp">

        <ImageView
            android:id="@+id/category_image"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_margin="10dp"
            android:src="@drawable/image_icon"
            android:contentDescription="@string/category_image_desc"
            android:elevation="4sp"
            android:layoutDirection="ltr"
            android:shape="rectangle"
            />

    </LinearLayout>


    <View
        android:id="@+id/view"
        android:layout_width="1sp"
        android:layout_height="50sp"
        android:background="@color/sienna"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View

        android:id="@+id/view2"
        android:layout_width="1sp"
        android:layout_height="80sp"
        android:background="@color/sienna"
        app:layout_constraintBottom_toBottomOf="@+id/ll_"
        app:layout_constraintStart_toStartOf="parent" />

    <View

        android:id="@+id/view3"
        android:layout_width="120dp"
        android:layout_height="1sp"
        android:background="@color/sienna"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="8sp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/ll_" />


    <TextView
        android:id="@+id/category_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAlignment="center"
        android:text="Description here"
        android:textColor="@color/gray"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />
    <!-- Category Title -->

</androidx.constraintlayout.widget.ConstraintLayout>
