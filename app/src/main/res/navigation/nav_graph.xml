<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/splash"
    android:id="@+id/nav_graph">

    <fragment
        android:id="@+id/splash"
        android:name="com.vishalpvijayan.thefreshly.presentation.ui.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_splash_to_dashboard"
            app:destination="@id/dashboard" />
    </fragment>

    <fragment
        android:id="@+id/login"
        android:name="com.vishalpvijayan.thefreshly.presentation.ui.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_createccount2"
            app:destination="@id/createccount" />
        <action
            android:id="@+id/action_login_to_forgotpassword"
            app:destination="@id/forgotpassword" />
        <action
            android:id="@+id/action_login_to_dashboard"
            app:destination="@id/dashboard" />
    </fragment>

    <fragment
        android:id="@+id/createccount"
        android:name="com.vishalpvijayan.thefreshly.presentation.ui.fragment.CreateAccountFragment"
        android:label="fragment_create_account"
        tools:layout="@layout/fragment_create_account" >
        <action
            android:id="@+id/action_createccount_to_login"
            app:destination="@id/login" />
    </fragment>

    <fragment
        android:id="@+id/forgotpassword"
        android:name="com.vishalpvijayan.thefreshly.presentation.ui.fragment.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" >
        <action
            android:id="@+id/action_forgotpassword_to_login"
            app:destination="@id/login" />
    </fragment>

    <fragment
        android:id="@+id/dashboard"
        android:name="com.vishalpvijayan.thefreshly.presentation.ui.fragment.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_dashboard_to_product"
            app:destination="@id/product" />
        <action
            android:id="@+id/action_dashboard_to_user"
            app:destination="@id/user" />
    </fragment>

    <fragment
        android:id="@+id/user"
        android:name="com.vishalpvijayan.thefreshly.presentation.ui.fragment.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" >
    </fragment>

    <fragment
        android:id="@+id/product"
        android:name="com.vishalpvijayan.thefreshly.presentation.ui.fragment.DashboardFragment"
        android:label="fragment_product"
        tools:layout="@layout/fragment_product" >
        <action
            android:id="@+id/action_product_to_payment"
            app:destination="@id/payment" />
    </fragment>

    <fragment
        android:id="@+id/payment"
        android:name="com.vishalpvijayan.thefreshly.presentation.ui.fragment.DashboardFragment"
        android:label="fragment_payment"
        tools:layout="@layout/fragment_payment" >
        <action
            android:id="@+id/action_payment_to_waiting"
            app:destination="@id/waiting" />
        <action
            android:id="@+id/action_payment_to_fail"
            app:destination="@id/fail" />
    </fragment>

    <fragment
        android:id="@+id/waiting"
        android:name="com.vishalpvijayan.thefreshly.presentation.ui.fragment.DashboardFragment"
        android:label="fragment_waiting"
        tools:layout="@layout/fragment_waiting" >
    </fragment>


    <fragment
        android:id="@+id/fail"
        android:name="com.vishalpvijayan.thefreshly.presentation.ui.fragment.FailFragment"
        android:label="fragment_fail"
        tools:layout="@layout/fragment_fail" >
        <action
            android:id="@+id/action_fail_to_product"
            app:destination="@id/product" />
    </fragment>


</navigation>